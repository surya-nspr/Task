import React, { useEffect, useState } from 'react'
import { Link, useNavigate } from 'react-router-dom'
import TaskService from '../Services/TaskService'
const TaskList = () => { const [eventArray, setEventArray] = useState([]) const navigate = useNavigate() // const [status, setstatus] = false const deleteTask = (id) => { console.log('Delete Task handler fired. id value received: ', id) TaskService.deleteTask(id).then((response) => { console.log('Response received from delete api.....' + JSON.stringify(response.data)) fetchAllTasks() // setstatus(!status) }) .catch(error => { console.log('error received from delete api....', error) }) } const fetchAllTasks = () => { console.log('Fetch all Events Fired...') TaskService.getAllTasks().then((response) => { setEventArray(response.data) console.log('Response received from API', response.data) }) } useEffect(() => { fetchAllTasks() }, []) return ( <div className='container'> {console.log('Application has rendered....')} <h2 className='text-center'>Task Data</h2> <Link to='/add' className='btn btn-primary'>Add Task</Link> <table className="table table-bordered table-info r table-striped"> <thead> <tr className='table-warning'> <th>task Id</th> <th>Title</th> <th>Description</th> <th>Update</th> <th>Delete</th> </tr> </thead> <tbody> { eventArray.map((data, key) => <tr key={key}> <td>{data.taskId}</td> <td>{data.title}</td> <td>{data.description}</td> <td><Link to={`/update/${data.id}`} className='btn btn-success'>Update</Link></td> <td><button className='btn btn-danger' onClick={() => deleteTask(data.id)}>Delete</button></td> </tr>) } </tbody> </table> </div> ) } export default TaskList as make it into cards and when I press delete it is not working what to do 
